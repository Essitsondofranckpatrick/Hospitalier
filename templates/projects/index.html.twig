{% extends 'base-back.html.twig' %}


{% block title %}Projects index{% endblock %}

{% block body %}
    <h1>Projects index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Ref</th>
                <th>Nom</th>
                <th>Description</th>
                <th>DureeEstimee</th>
                <th>OffreStage</th>
                <th>Effectif</th>
                <th>Etat</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for project in projects %}
            <tr>
                <td>{{ project.id }}</td>
                <td>{{ project.ref }}</td>
                <td>{{ project.nom }}</td>
                <td>{{ project.description }}</td>
                <td>{{ project.dureeEstimee }}</td>
                <td>{{ project.offreStage ? 'Yes' : 'No' }}</td>
                <td>{{ project.effectif }}</td>
                <td>{{ project.etat }}</td>
                <td>
                    <a href="{{ path('app_projects_show', {'id': project.id}) }}">show</a>
                    <a href="{{ path('app_projects_edit', {'id': project.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_projects_new') }}">Create new</a>
{% endblock %}
