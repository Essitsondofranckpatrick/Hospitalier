{% extends 'base-back.html.twig' %}


{% block title %}Projects{% endblock %}

{% block body %}
    <h1>Projects</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ project.id }}</td>
            </tr>
            <tr>
                <th>Ref</th>
                <td>{{ project.ref }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ project.nom }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ project.description }}</td>
            </tr>
            <tr>
                <th>DureeEstimee</th>
                <td>{{ project.dureeEstimee }}</td>
            </tr>
            <tr>
                <th>OffreStage</th>
                <td>{{ project.offreStage ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Effectif</th>
                <td>{{ project.effectif }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_projects_index') }}">back to list</a>

    <a href="{{ path('app_projects_edit', {'id': project.id}) }}">edit</a>

    {{ include('projects/_delete_form.html.twig') }}
{% endblock %}
